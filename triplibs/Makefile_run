hpip_root=@HPIP_ROOT@
run=@RUN@
rep=@REP@

stats = Stats/Stats.json
raw_datadir = $(hpip_root)/data/raw/$(run)/HPIP_$(run)_$(rep)
sample_sheet = $(raw_datadir)/SampleSheet.csv

all : $(stats)

$(stats) : $(sample_sheet)
	bcl2fastq -R $(raw_datadir) -o . --no-lane-splitting --sample-sheet $<

# clean targets
.PHONY : clean

clean :
	rm -rf Stats Reports \
	  *.fastq.gz \
	  $(sample_sheet)
